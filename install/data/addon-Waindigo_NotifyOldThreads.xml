  <admin_templates>
    <template title="waindigo_option_select_notifyoldthreads"><![CDATA[<xen:selectunit label="{$preparedOption.title}" name="{$fieldPrefix}[{$preparedOption.option_id}]"
hint="{$preparedOption.hint}" inputclass="{$preparedOption.inputClass}" multiple="multiple">
	<xen:options source="$formatParams" />
	<xen:explain>{xen:raw $preparedOption.explain}</xen:explain>
	<xen:html>
		<input type="hidden" name="{$listedFieldName}" value="{$preparedOption.option_id}" />
		{xen:raw $editLink}
	</xen:html>
</xen:selectunit>]]></template>
    <template title="waindigo_option_template_notifyoldthreads"><![CDATA[<xen:require js="js/waindigo/notifyoldthreads/option.js" />
<xen:controlunit label="{$preparedOption.title}" hint="{$preparedOption.hint}">
	<xen:explain>{xen:raw $preparedOption.explain}</xen:explain>
	<xen:html>
		<ul>
			<xen:foreach loop="$threads" key="$counter" value="$thread">
			<li>
				<xen:textbox name="{$fieldPrefix}[{$preparedOption.option_id}][{$counter}]" value="{$thread.thread_id}" placeholder="{xen:phrase waindigo_thread_id_notifyoldthreads}" size="15" inputclass="NotifyOldThreadsThreadId" id="NotifyOldThreadsThread{$counter}" />
				<span id="NotifyOldThreadsThread{$counter}Info"><a href="{xen:link 'threads', $thread}" target="_blank">{xen:helper wordtrim, $thread.title, 25}</a></span>
			</li>
			</xen:foreach>
		
			<li class="NotifyOldThreadsOptionListener">
				<xen:textbox name="{$fieldPrefix}[{$preparedOption.option_id}][{$nextCounter}]" value="" placeholder="{xen:phrase waindigo_thread_id_notifyoldthreads}" size="15"/>
			</li>
		</ul>
		
		<input type="hidden" name="{$listedFieldName}" value="{$preparedOption.option_id}" />
		{xen:raw $editLink}
	</xen:html>
</xen:controlunit>]]></template>
